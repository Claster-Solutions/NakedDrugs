{
    "hosting": {
        "public": "out",
        "ignore": [],
        "trailingSlash": false,
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "/api/email",
                "function": "email"
            }
        ]
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
        }
    ]
}
